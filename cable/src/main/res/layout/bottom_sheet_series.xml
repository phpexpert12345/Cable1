<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_series"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="#0f0f49"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btm_sht_bg"
        >

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:layout_centerInParent="true"
            android:text="Upload Episode"
            android:layout_gravity="start"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="#29abe1" />




    </RelativeLayout>


    <Button
        android:layout_width="200dp"
        android:text="New Series"
        android:textAllCaps="false"
        android:id="@+id/new_series"
        android:background="@drawable/blue_btn_bg"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="50dp"/>


    <Button
        android:layout_width="200dp"
        android:text="Continue"
        android:id="@+id/continues"
        android:textAllCaps="false"
        android:background="@drawable/blue_btn_bg"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"/>


</LinearLayout>