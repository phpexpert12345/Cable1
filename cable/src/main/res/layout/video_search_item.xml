<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="300dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/imgg"
                android:id="@+id/imageview"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>


            <RelativeLayout
                android:id="@+id/logo_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_30sdp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp"
                    android:id="@+id/card_view_social"
                    android:background="@drawable/gradient_channel_bg"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_channel_bg"

                        >

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="50sp"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:padding="5dp"
                            android:textColor="@color/colorPrimaryText_black"
                            android:text="user_name"
                            />


                        <ImageView
                            android:adjustViewBounds="false"
                            android:fitsSystemWindows="true"
                            android:id="@+id/chnl_img"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/ag"/>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>




            </RelativeLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:background="@drawable/blue_btn_bg"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="25k"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/video_search_title"
                    android:layout_width="wrap_content"
                    android:text="It happend in calcutta"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/video_search_date"
                    android:layout_width="wrap_content"
                    android:textAllCaps="false"
                    android:text="Jun 20, 2020"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>