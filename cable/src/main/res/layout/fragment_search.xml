<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cable.social.app.activity.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorbg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/gray_solid_round"
        android:layout_height="50dp">
        <EditText
            android:layout_width="match_parent"
            android:textColorHint="@color/blue2"
            android:background="#00FFFFFF"
            android:textSize="14sp"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="20dp"
            android:hint="@string/search_for_a_movie_tv_show_person"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/search_txt"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="Search"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:paddingLeft="10dp"
            android:textSize="@dimen/seeall"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>

        <TextView
            android:visibility="gone"
            android:paddingRight="10dp"
            android:textSize="@dimen/seeall"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See All >>"
            android:textColor="@color/white"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/recycleviewcategory">
    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textColor="@color/white"/>

        <TextView
            android:paddingRight="10dp"
            android:textSize="@dimen/seeall"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See All >>"
            android:textColor="@color/white"/>
    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>


    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycleviewvatical">
    </androidx.recyclerview.widget.RecyclerView>




</LinearLayout>